@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> SignInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _2024_2C_SushiPOP_G1</title>
    <link rel="shortcut icon" type="x-icon" href="./lib/imgs/web_logo.png"/>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_2024_2C_SushiPOP_G1.styles.css" asp-append-version="true" />
</head>
<body>
    <a name="home"></a>
    <header>
        <nav class="navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
            <div class="categorias-cont">
                <img class="nav-logo" src="~/lib/imgs/logo.png" alt="Alternate Text" />

                <div class="categorias text-center">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Combos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Piezas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Salads</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Entradas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Salsas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Bebidas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Categorias" asp-action="Index">Postres</a>
                        </li>
                    </ul>
                </div>

                <div class="icons">
                    <a asp-area="" asp-controller="Login" asp-action="IniciarSesion">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="red" class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                        </svg>
                    </a>
                    <a asp-area="" asp-controller="Carritos" asp-action="Index">
                        <svg xmlns="http://www.w3.org/2000/svg" width="19" height="20" fill="red" class="bi bi-cart4" viewBox="0 0 16 16">
                            <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5M3.14 5l.5 2H5V5zM6 5v2h2V5zm3 0v2h2V5zm3 0v2h1.36l.5-2zm1.11 3H12v2h.61zM11 8H9v2h2zM8 8H6v2h2zM5 8H3.89l.5 2H5zm0 5a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0m9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2m-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0" />
                        </svg>
                    </a>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-cont">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <section class="columns center">
            <article class="col col1">
                <a href="#home"><img src="./lib/imgs/logo_sin_fondo.png" alt="sushi" /></a>
            </article>
            <article class="col col2">
                <a asp-area="" asp-controller="Categorias" asp-action="Index">Combos</a>
                <a asp-area="" asp-controller="Categorias" asp-action="Index">Piezas</a>
                <a asp-area="" asp-controller="Categorias" asp-action="Index">Salads</a>
                <a asp-area="" asp-controller="Categorias" asp-action="Index">Entradas</a>
                <a asp-area="" asp-controller="Categorias" asp-action="Index">Salsas</a>
                <a asp-area="" asp-controller="Categorias" asp-action="Index">Bebidas</a>
                <a asp-area="" asp-controller="Categorias" asp-action="Index">Postres</a>
            </article>
            <article class="col col3">
                <a asp-area="" asp-controller="Contactos" asp-action="Index">Contacto</a>
                <a asp-area="" asp-controller="Pedidos" asp-action="Index">Seguir pedido</a>
                <a asp-area="" asp-controller="Reclamos" asp-action="Index">Reclamos</a>
                <a href="https://www.argentina.gob.ar/normativa/nacional/ley-24430-804/texto">Legales</a>
            </article>
        </section>

        <div class="footer-container">
            <p>&copy; 2024 SushiPOP - Desarrllo web por Grupo 1 ORT</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
